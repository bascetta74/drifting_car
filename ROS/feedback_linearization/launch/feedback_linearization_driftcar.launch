<launch>
  <!--- Run serial_comm node -->
  <node pkg="serial_comm" type="serial_comm" respawn="false" name="serial_comm" output="screen">
    <rosparam file="$(find serial_comm)/config/serial_comm_params.yaml" command="load" />
  </node>

  <!--- Run optitrack node -->
  <arg name="optitrack_config_file"
       default="$(find drifting_optitrack)/config/optitrack.yaml" />

  <node pkg="drifting_optitrack"
        type="optitrack_node"
        name="optitrack_node"
        respawn="false"
        launch-prefix=""
        required="true"
        output="screen">
    <rosparam file="$(arg optitrack_config_file)" command="load" />
  </node>

  <!--- Run IMU node -->
  <node pkg="myahrs_driver" type="myahrs_driver" name="myahrs_driver">
    <rosparam file="$(find myahrs_driver)/config/myahrs_params.yaml" command="load" />
  </node>

  <!--- Run feedback_linearization node -->
  <node pkg="feedback_linearization" type="test_feedback_linearization_driftcar" respawn="false" name="test_feedback_linearization" output="screen">
    <rosparam file="$(find feedback_linearization)/config/feedback_linearization_driftcar_params.yaml" command="load" />
    <rosparam param="/test_feedback_linearization/use_ideal_sim">false</rosparam>
  </node>
</launch>
